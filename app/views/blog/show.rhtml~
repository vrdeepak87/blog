<%= hidden_field 'comment', 'commenttor', 'value' => @user.username %>
<%= hidden_field 'comment', 'blog_id', 'value' => @blog.id %>
<%= hidden_field 'comment', 'user_id', 'value' => @user.id %>
<%= hidden_field 'comment', 'username', 'value' => @user.username %>
