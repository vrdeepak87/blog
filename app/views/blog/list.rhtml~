<!-- Displaying the list of blogs which are written so far -->
<% if @blogs.blank? %>
<p> You havent blogged anything so far</p>

<% else %>
<p>Blogs Written so far</p>
<% @blogs.each do |c| %>
<li> <%= link_to c.title , {:action => 'show' , :id => c.id} %> </li>
<p> <%= c.description %> </p>
<% end %>
<% end %>

<!-- Will paginate snippet to display the page links in the browser -->
<%= will_paginate @blogs %>



<p> <%= link_to "Write new", {:action => 'new'} %></p>






